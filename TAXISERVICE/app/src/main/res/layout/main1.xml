<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Верхняя панель -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <!-- Меню -->
        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/menu"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Меню" />

        <!-- Текст "Добро пожаловать!" -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Добро пожаловать!"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Карточка тарифа "Эконом" -->
    <LinearLayout
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:padding="16dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <!-- Иконка -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/econom_car"
    android:backgroundTint="@android:color/transparent" />

    <!-- Информация о тарифе -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Эконом"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Стандартный автомобиль"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Цена -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300 ₽"
        android:textSize="16sp"
        android:textColor="#EDAF10"
        android:textStyle="bold" />
</LinearLayout>

    <!-- Карточка тарифа "Комфорт" -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="16dp">

    <!-- Иконка -->
<ImageView
android:layout_width="48dp"
android:layout_height="48dp"
android:src="@drawable/comfort_car"
    android:backgroundTint="@android:color/transparent" />

    <!-- Информация о тарифе -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
android:layout_marginStart="16dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Комфорт"
    android:textSize="16sp"
    android:textColor="#000000"
    android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Более просторный автомобиль"
    android:textSize="14sp"
    android:textColor="#666666"
    android:layout_marginTop="4dp" />
</LinearLayout>

    <!-- Цена -->
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="500 ₽"
android:textSize="16sp"
android:textColor="#EDAF10"
android:textStyle="bold" />
    </LinearLayout>

    <!-- Разделитель -->
<View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="#CCCCCC"
android:layout_marginBottom="16dp" />

    <!-- Адрес отправления -->
<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Откуда: Улица Пушкина, 10"
android:textSize="16sp"
android:textColor="#000000"
android:layout_marginBottom="8dp" />

    <!-- Адрес назначения -->
<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Куда: Улица Лермонтова, 25"
android:textSize="16sp"
android:textColor="#000000"
android:layout_marginBottom="16dp" />

    <!-- Кнопка "Заказать такси" -->
<Button
    style="@style/YellowButtonStyle"
android:id="@+id/orderTaxiButton"
android:layout_width="match_parent"
android:layout_height="50dp"
android:text="Заказать такси"

    android:textAllCaps="false"
    android:layout_marginTop="16dp" />
    </LinearLayout>