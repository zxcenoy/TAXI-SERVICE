<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"> <!-- Фон при нажатии -->

    <!-- Информация о водителе -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Валерий"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mustang Shelby GT"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Время поездки или статус (отменена) -->
    <TextView
        android:id="@+id/timerOrStatusHistoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="сегодня в 9:10"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="16dp" />
</LinearLayout>